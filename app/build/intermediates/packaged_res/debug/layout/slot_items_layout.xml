<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/parent"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/vaccine_slot_symbol"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VaccineType"
            android:id="@+id/txtVaccineType"
            android:layout_below="@id/image"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/txtcenterOnPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtVaccineType"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:text="Center"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtcenterOnPost"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:text="Location"
            android:textStyle="italic" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:id="@+id/txtDateTime"
            android:textStyle="italic"
            android:layout_below="@+id/txtLocation"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability Status"
            android:id="@+id/txtAvailabilityStatus"
            android:textStyle="italic"
            android:layout_below="@+id/txtDateTime"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Status"
            android:id="@+id/txtBookingStatus"
            android:textStyle="italic"
            android:layout_below="@+id/txtAvailabilityStatus"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>